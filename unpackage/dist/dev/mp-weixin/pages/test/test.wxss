
.box{
	position: relative;
	margin-top: 20rpx;
	width:540rpx;
	height: 540rpx;
	border:1px solid #000;
	border-radius: 50%;
}
.box > view{
	position: absolute;
	border-radius: 50%;
	line-height: 40rpx;
	text-align: center;
	left: 50%;
	margin-left: -70rpx;
	margin-top: -20rpx;
	width:140rpx;
	height: 40rpx;
	border:1px solid #f60;
}
.li:nth-of-type(2){
				-webkit-transform: rotate(45deg);
				        transform: rotate(45deg);
				-webkit-transform-origin:70rpx 290rpx;
				        transform-origin:70rpx 290rpx;
}
