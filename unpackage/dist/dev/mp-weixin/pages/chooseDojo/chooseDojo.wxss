
page {
	background: rgba(252, 237, 209, 1);
}
.title {
	font-size: 58rpx;
	font-family: 'book';
	font-weight: 400;
	color: rgba(147, 92, 65, 1);
}
.title:nth-child(1) {
	margin-top: 73rpx;
}
.gossipBox {
	position: relative;
	width: 540rpx;
	height: 540rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 90rpx;
	position: relative;
	/* border:1px solid #000; */
	border-radius: 50%;
}
.gossipImg {
	width: 305rpx;
	height: 305rpx;
}
.itemBox {
	position: absolute;
	text-align: center;
	left: 50%;
	margin-left: -70rpx;
	top: -40rpx;
	width: 140rpx;
	/* border:1px solid #f60; */
}
.gossipTitle {
	display: block;
	padding: 20rpx 0;
	background: rgba(252, 237, 209, 1);
	font-size: 35rpx;
	/* font-family:STKaitiTC; */
	font-weight: 400;
	color: rgba(154, 57, 46, 1);
}
.itemIcon {
	width: 140rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.one,
.two {
	width: 82rpx;
	height: 17rpx;
	margin-bottom: 6rpx;
}
.one {
	width: 82rpx;
	height: 17rpx;
	background-color: #B37F5D;
}
.two {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.half {
	width: 38rpx;
	height: 17rpx;
	background-color: #B37F5D;
}
.selActive .one,
.selActive .half {
	background: rgba(8, 4, 3, 1) !important;
}
.selActive .gossipTitle {
	color: rgba(8, 4, 3, 1) !important;
}
.itemBox:nth-of-type(2) {
	-webkit-transform: rotate(45deg);
	        transform: rotate(45deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(3) {
	-webkit-transform: rotate(90deg);
	        transform: rotate(90deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(4) {
	-webkit-transform: rotate(135deg);
	        transform: rotate(135deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(5) {
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(6) {
	-webkit-transform: rotate(225deg);
	        transform: rotate(225deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(7) {
	-webkit-transform: rotate(270deg);
	        transform: rotate(270deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.itemBox:nth-of-type(8) {
	-webkit-transform: rotate(315deg);
	        transform: rotate(315deg);
	-webkit-transform-origin: 70rpx 310rpx;
	        transform-origin: 70rpx 310rpx;
}
.rotate180 {
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
	-webkit-transform-origin: center center;
	        transform-origin: center center;
}
.tip {
	font-size: 36rpx;
	font-family: 'book';
	font-weight: 400;
	color: rgba(154, 57, 46, 1);
	margin-top: 107rpx;
}
.btnBox {
	position: relative;
	width: 564rpx;
	height: 81rpx;
	margin-top: 64rpx;
}
.btnImg {
	width: 100%;
	height: 100%;
}
.btnTxt {
	width: 100%;
	height: 100%;
	text-align: center;
	line-height: 81rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	font-size: 45rpx;
	font-family: 'book';
	font-weight: 400;
	color: rgba(220, 198, 177, 1);
}
.getUserBtn {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}

